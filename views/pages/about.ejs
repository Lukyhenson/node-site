<%- contentFor('hero') %>
<section class="hero">
  <div class="hero-content">
    <h2>All about us!</h2>
      <p>
        We're a small team.
      </p>

      <a href="/" class="btn btn-lg btn-primary">Drop us a line</a>
    </div>
</section>

<%- contentFor('body') %>
<div class="jumbotron text-center">
  <ul class="list-group">
    <h1>Our Team</h1>

    <div class="row">
      <% for (user of users) { %>
        <div class="col-sm-3">
          <h3><%= user.name %>
            <h4><%= user.office %>
            <h4><%= user.email %>
            <img src="<%= user.avatar %>" alt="" class="img-responsive">
        </div>
        <% } %>
    </div>
  </ul>
</div>
